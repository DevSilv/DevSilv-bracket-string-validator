#!/bin/bash

ARG="$1"

if [ -f "$ARG" ] ; then
    node "./app/logic/unit-testing/non-testable/run-unit-tests.js" "$ARG"
elif [ "$ARG" == "" ] ; then
    node "./app/logic/unit-testing/non-testable/run-unit-tests.js"
elif [ -e "$ARG" ] ; then
    printf "File of wrong type specified: $ARG. You may use only regular files.\n"
else
    printf "The specified file does not exist: $ARG.\n"
fi
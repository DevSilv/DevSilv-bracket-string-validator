#!/bin/bash

source ./app/cli/print-usage

THIS_SCRIPT_NAME=$(basename "$0")
FIRST_ARG="$1"
SECOND_ARG="$2"
THIRD_ARG="$3"

case "$FIRST_ARG" in
    "run-benchmark"|"b")
        bash "./app/cli/benchmarking-cli/run-benchmark" "$SECOND_ARG"
        ;;
    "run-unit-tests"|"t")
        bash "./app/cli/unit-testing-cli/run-unit-tests" "$SECOND_ARG"
        ;;
    "validate"|"v")
        bash "./app/cli/validation-cli/validate" "$SECOND_ARG" "$THIRD_ARG"
        ;;
    "")
        printf "$THIS_SCRIPT_NAME: no particular subcommand specified.\n"
        printUsage
        ;;
    *)
        printf "$THIS_SCRIPT_NAME: $FIRST_ARG: subcommand uknown.\n"
        printUsage
        ;;
esac